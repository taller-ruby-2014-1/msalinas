<h1 class ="title">Mis posts</h1>
<table class ="tabla" style ="text-align: center;" border =1>

  <tr> 	
  		<th>Titulo</th>  
  		<th>Texto</th>  
  		<th></th>
    	<th></th>
    	<th></th>
  </tr>
  <% @posts.each do |post| %>
    <tr style ="text-aling:center;">
      	<td><%= post.title %></td>
      	<td><%= post.text %></td>
      	<td class ="button"><%= link_to 'Show', post_path(post) %></td>
      	<td class ="button"><%= link_to 'Destroy', post_path(post),
                    method: :delete, data: { confirm: '¿Estás seguro?' } %></td>
    	<td class ="button"><%= link_to 'Edit', edit_post_path(post) %></td>
    </tr>
  <% end %>
</table>
<h1 class ="link"><%= link_to 'Nuevo post', new_post_path %></h1>

